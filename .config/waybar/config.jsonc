// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "position": "top",
    // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // "margin-top": 5,
    // "margin-left": 5,
    // "margin-right": 5,
    // Choose the order of the modules
    "modules-left": [
      "clock",
    ],
    "modules-center": [
      "sway/workspaces",
    ],
    "modules-right": [
      "pulseaudio",
      "battery",
    ],
    "custom/weather": {
      "tooltip": false,
      "exec": "curl 'https://wttr.in/Zurich?format=1'",
    },
    "clock": {
      "interval": 1,
      "format": "<span color=\"#89b4fa\">ÔÄó</span>  {:%d.%m.%y, %H:%M:%S}",
    },

    "battery": {
      "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
      },
      "format": "{capacity}% {icon}",
      "format-full": "{capacity}% {icon}",
      "format-charging": "{capacity}% <span color=\"#a6e3a1\">Û∞ÇÑ</span>",
      "format-plugged": "{capacity}% Ôá¶",
      "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["<span color=\"#f38ba8\">ÔâÑ</span>", "<span color=\"#f9e2af\">ÔâÉ</span>", "<span color=\"#a6e3a1\">ÔâÇ</span>", "<span color=\"#a6e3a1\">ÔâÅ</span>", "<span color=\"#a6e3a1\">ÔâÄ</span>"]
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% <span color=\"#89b4fa\">{icon}</span>",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
          "headphone": "ÔÄ•",
          "hands-free": "Ôñê",
          "headset": "Ôñê",
          "phone": "ÔÇï",
          "portable": "ÔÇï",
          "car": "ÔÜπ",
          "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
      "format": "{icon} {}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
